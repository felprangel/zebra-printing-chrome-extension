{
  "manifest_version": 3,
  "name": "Zebra Printing",
  "version": "1.7",
  "description": "Allows to print ZPL to a network connected Zebra printer.",
  "icons": {
    "128": "zebra128.png"
  },
  "author": "Daniel Nitz",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "offline_enabled": true
}
